@model PagedResult<E_NompiloPHC.ViewModels.ReferralViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Doctor
            </th>
            <th>
                Type
            </th>
            <th>
                Patient
            </th>
@*            <th>
                Appointment
            </th>*@
            <th>
                CreatedReferral
            </th>
	    <th>
                ReferralDate
            </th>
            <th>
                ReferralReason
            </th>
            <th>
                IsCompleted
            </th>
            <th>
                IsCanceled
            </th>
            <th>
                CancelledDate
            </th>
	    <th>
                CancelledReason
            </th>
	    <th>
                Notes
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Doctor)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Patient)
            </td>
@*            <td>
                @Html.DisplayFor(modelItem => item.Appointment)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.CreatedReferral)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReferralDate)
            </td>
	    <td>
                @Html.DisplayFor(modelItem => item.ReferralReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCompleted)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsCanceled)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CancelledDate)
            </td>
	    <td>
                @Html.DisplayFor(modelItem => item.CancelledReason)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            
            <td>
                @Html.ActionLink("Edit", "Edit", new {  id=item.Id }) |
                @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.Id })
            </td>
        </tr>
}
    </tbody>
</table>
<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalItems
          cs-pagenumber-param="pageNumber"
          asp-controller="Referrals"

          asp-action="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-no-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
          </cs-pager>
